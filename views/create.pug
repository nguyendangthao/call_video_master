#contact.contact-box
  .container
    .row
      .col-lg-7.col-sm-7.col-xs-12
        .contact-block
        if errors
            each error in errors
                .alert.alert-danger=error
        form(action='/create', method='post')
          .form-group.group-input
            input#firstname(type='text', name='name',class="form-control", placeholder='First Name', title='Please enter your First Name', required='')
          .form-group.group-input
            input#phone(type='text', pattern='[0-9]{10}',class="form-control", name='Phone', placeholder='Phone', title='Please enter your phone', required='')
          .form-group.group-input
            input#email(type='email', name='email',class="form-control", placeholder='mail@example.com', title='Please enter a valid email', required='')
          .form-group.group-input
            input#password1.lock(type='password',class="form-control", name='password', placeholder='Password', required='')
          .form-group.group-input
            input#password2.lock(type='password',class="form-control", name='confirm-password', placeholder='Confirm Password', required='')
          input.register(type='submit', value='Sign Up', class='btn btn-primary')

          //form#contactForm(action='/auth/login', method='POST')
            .row
              .col-md-6
                .form-group
                  input#name.form-control(type='text', name='name', placeholder='Your Name', required='', data-error='Please enter your name')
                  .help-block.with-errors
              .col-md-6
                .form-group
                  input#email.form-control(type='email', placeholder='Your Email', name='email', required='', data-error='Please enter your email')
                  .help-block.with-errors
              .col-md-12
                .form-group
                  input#number.form-control(type='text', pattern='[0-9]{10}', placeholder='Your number', name='phone', required='', data-error='Please enter your number')
                  .help-block.with-errors
              .col-md-12
                .form-group
                  input#password1.form-control(type='password', name='password', placeholder='Password', required='')
                  .help-block.with-errors
              .col-md-12
                .form-group
                  input#password2.form-control(type='password', name='password', placeholder='Confirm Password', required='')
                  .help-block.with-errors
                button#submit.btn.btn-common(type='submit') Register
              .col-md-12
                .submit-button.text-center
                  
                  //#msgSubmit.h3.text-center.hidden
                  .clearfix
          script(type='text/javascript').
            window.onload = function () {
            document.getElementById("password1").onchange = validatePassword;
            document.getElementById("password2").onchange = validatePassword;
            }
            function validatePassword(){
            var pass2=document.getElementById("password2").value;
            var pass1=document.getElementById("password1").value;
            if(pass1!=pass2)
            document.getElementById("password2").setCustomValidity("Passwords Don't Match");
            else
            document.getElementById("password2").setCustomValidity('');
            //empty string means no validation error
            }
